            android:name=".remember.DataClassActivity"
            android:exported="false" />
        <activity
            android:name=".animtextchatgpt.AnimTextChatGPTActivity"
            android:exported="false" />
        <activity
            android:name=".scrollspacer.ScrollSpacerActivity"
            android:exported="false" />
        <activity
            android:name=".pip.PictureInPictureActivity"
            android:exported="false"
            android:supportsPictureInPicture="true" />
        <activity
            android:name=".coroutinetimer.CoroutineTimerActivity"
            android:exported="false" />
    </application>

</manifest>